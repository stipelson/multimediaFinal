<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <legend>
      <h2 class="form-signin-heading"><%=  'Iniciar sesión'  %></h2>
    </legend>

    <% if @error_login %>
    <br/>
    <div class="alert alert-danger" role="alert">
      <strong>¡Error!</strong> Usuario o contraseña son incorrectos.
    </div>
    <% end %>

    <%= form_tag({:controller => "login", :action => "iniciar_sesion", :method => "post"}, class: "form-horizontal") do %>

    <div class="form-group">
      <%= text_field_tag "usuario", "", :required => "required", class: 'form-control', placeholder: 'Usuario' %>
    </div>

    <div class="form-group">
      <%= password_field_tag "password", "", :required => "required", class: "form-control", placeholder: 'Contraseña' %>
    </div>


    <div class="form-group">
      <%= submit_tag 'Iniciar sesión', class: "btn btn-success btn-block" %>
    </div>
    <% end %>

  </div>
</div>
