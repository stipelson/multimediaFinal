<!DOCTYPE html>
<html>
<head>
  <title>Adopta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrap">
    <div class="row">
      <div class="col-md-12">
      <div class="pull-right">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Tamaño
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><%= link_to cambiar_font_path(5) do %>
            <h5>A</h5>
            <% end %>
          </li>
          <li><%= link_to cambiar_font_path(4) do %>
            <h4>A</h4>
            <% end %>
          </li>
          <li><%= link_to cambiar_font_path(3) do %>
            <h3>A</h3>
            <% end %>
          </li>
          <li><%= link_to cambiar_font_path(2) do %>
            <h2>A</h2>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <%= image_tag("mascotas.jpg", :class => "img-responsive") %>

      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">

              <ul class="nav navbar-nav">

                <li><%= link_to root_path do %>
                  <h<%= @fuente_nav %>>Inicio</h<%= @fuente_nav %>>
                  <% end %>
                </li>
                <li><%= link_to mascota_path do %>
                  <h<%= @fuente_nav %>>Catalogo</h<%= @fuente_nav %>>
                  <% end %>
                </li>
                <li><a href="#"><h<%= @fuente_nav %>>Acerca de</h<%= @fuente_nav %>></a></li>
              </ul>

              <ul class="nav navbar-nav navbar-right">
                <% if @sesion %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <h<%= @fuente_nav %>>Cuenta<span class="caret"></span></h<%= @fuente_nav %>></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to 'Mis datos', edit_user_path(@current_user_id), :'data-tools' => 'tooltip', :'title' => 'Editar datos' %>
                    </li>
                    <% if @permiso_admin %>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to 'Mascotas', mascota_path, :'data-tools' => 'tooltip', :'title' => 'Mascotas' %>
                    </li>

                    <% end %>
                    <li>
                      <%= link_to 'Adopciones', admin_petitions_path, :'data-tools' => 'tooltip', :'title' => 'Peticiones de adopcion' %>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to 'Salir', login_cerrar_sesion_path %>
                    </li>
                  </ul>
                </li>
                <% elsif @sesion == false %>
                <!--<li><%=link_to "<h4>Registrate</h4>".html_safe, new_user_path %></li>-->
                <li><%= link_to new_user_path do %>
                  <h<%= @fuente_nav %>>Registrate</h<%= @fuente_nav %>>
                  <% end %>
                </li>

                <%= link_to login_iniciar_sesion_path, :class => 'btn btn-success navbar-btn' do %>
                  <h<%= @fuente_nav %>>Iniciar sesión</h<%= @fuente_nav %>>
                  <% end %>

                <% end %>
              </ul>

            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>


        <%= render_breadcrumbs(" ", { class: '', tag: 'li', divider_class: '/', active_class: 'active' }) %>


        <%= yield %>

      </div>
    </div>
  </div>

  <div id="footer">
    <div class="container">
      <p class="muted credit">Derechos reservados por <a href="#">AMS</a>.</p>
    </div>
  </div>

</body>
</html>
